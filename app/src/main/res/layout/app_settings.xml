<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.AppSettings">


    <TextView
        android:id="@+id/tv_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="64dp"
        android:text="Signature: "
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Default reply:"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/tv_signature"
        app:layout_constraintTop_toBottomOf="@+id/tv_signature" />


    <TextView
        android:id="@+id/tv_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Sync: "
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/tv_reply"
        app:layout_constraintTop_toBottomOf="@+id/tv_reply" />

    <TextView
        android:id="@+id/tv_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Notifications:"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/tv_sync"
        app:layout_constraintTop_toBottomOf="@+id/tv_sync" />


    <ProgressBar
        android:id="@+id/pb_volume"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:max="100"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/tv_notifications"
        app:layout_constraintTop_toBottomOf="@+id/tv_notifications" />

</androidx.constraintlayout.widget.ConstraintLayout>